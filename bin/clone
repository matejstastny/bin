#!/usr/bin/env bash

# quickclone

if [ $# -eq 0 ]; then
    echo "[ERR] No parameters provided"
    exit 1
elif [ $# -eq 1 ]; then
    repo="github.com/matejstastny/$1.git"
elif [ $# -eq 2 ]; then
    repo="github.com/$1/$2.git"
else
    echo "[ERR] Too many parameters"
    exit 1
fi

echo "cloning https://$repo ..."
git clone "https://$repo"
